{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["src/**/*.vue", "src/pkg/confirm.ts"],
    "references": [{ "path": "./tsconfig.node.json" }],
    "paths": {
        "@/*": ["./*"],
        "@pkg": "./pkg/"
    }
}
